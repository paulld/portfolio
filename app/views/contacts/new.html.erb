<section id="skillset" class="main-width-small main-height-large">
  <header>
    <h1 class="cover-heading">I would love to hear from you!</h1>
  </header>
  <p class="lead contact-text">
    Please leave me a message<br>and I will get back to you shortly:
  </p>

  <div align="center">
    <%= simple_form_for @contact, :html => {:class => 'form-horizontal contact-form' } do |f| %>
      <div class="form-group">
        <%= f.input :name, :required => true, input_html: { class: 'form-control' }, label: false, placeholder: 'Your Name / Company' %>
        <%= f.input :email, :required => true, input_html: { class: 'form-control' }, label: false, placeholder: 'Your Email Address' %>
        <%= f.input :telephone, :required => false, input_html: { class: 'form-control' }, label: false, placeholder: 'Your Telephone number' %>
      </div>
      <div class="form-group">
        <%= f.input :message, :as => :text, :required => true, input_html: { class: 'form-control' }, label: false, placeholder: 'How can I help you?' %>
      </div>
      <div class= "hidden">
        <%= f.input :nickname, :hint => 'Leave this field blank!' %>
      </div>
      <div class="form-group">
        <%= f.button :submit, 'Send message', :class=> "btn btn-lg btn-default btn-contact" %>
      </div>
    <% end %>
  </div>
